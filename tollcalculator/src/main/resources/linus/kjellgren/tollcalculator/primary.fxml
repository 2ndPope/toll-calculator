<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="linus.kjellgren.tollcalculator.PrimaryController">
   <bottom>
      <TableView fx:id="tollTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="regNrColumn" prefWidth="200.0" text="RegNr" />
            <TableColumn fx:id="vehicleTypeColumn" prefWidth="161.0" text="Vehicle Type" />
          <TableColumn fx:id="tollColumn" prefWidth="86.0" text="Toll" />
            <TableColumn fx:id="datesColumn" prefWidth="403.0" text="Dates" />
        </columns>
      </TableView>
   </bottom>
   <top>
      <TitledPane animated="false" prefHeight="43.0" prefWidth="800.0" text="Toll-Calculator" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </TitledPane>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="New Registration" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <TextField fx:id="newRegNr" promptText="Enter Registration" />
                  <ChoiceBox fx:id="newVehicleType" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ChoiceBox>
                  <Button fx:id="newToll" mnemonicParsing="false" onAction="#registerNewToll" text="New Toll">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
